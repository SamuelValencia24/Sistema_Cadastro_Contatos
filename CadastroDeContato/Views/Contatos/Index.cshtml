@model IEnumerable<CadastroDeContato.Models.Contato>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
<h1 class="display-4">Cadastro De Contatos</h1>
<br />
<div class="text-md-start">
    <a class="btn btn-outline-primary" role="button"  asp-action="Create">Criar Novo Contato</a>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a class="btn btn-primary" role="button" asp-action="Edit" asp-route-id="@item.ID">Editar</a>  
                <a class="btn btn-primary" role="button" asp-action="Details" asp-route-id="@item.ID">Detalhes</a>  
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>